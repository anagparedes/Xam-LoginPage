<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginApp.LoginUI"
             BackgroundColor= "#121212">
    <ContentPage.Content>
        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Image Source="logo.jpg" WidthRequest="180" HeightRequest="180"></Image>
            
            <Entry x:Name="userText" Placeholder="Username" TextColor="#E3E3E3" PlaceholderColor="#F1EC40"></Entry>
            <Entry  x:Name="passwordText" Placeholder="Password" IsPassword="True" TextColor="#E3E3E3" PlaceholderColor="#F1EC40"></Entry>
            <Button VerticalOptions = "Center"
              Text="Login"     
              TextColor="#121212" 
              BackgroundColor="#F1CE40"
              BorderColor="#F1EC40"     
              BorderWidth="1.5"
              CornerRadius="50"
              Clicked="OnButtonClicked"
              ></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>